extends layouts/main-layout.pug

block styles    
    link(rel="stylesheet", href="/css/product.css")

block content 
    main
        if products.length > 0 
            .grid
                each product in products
                    article.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://placedog.net/250/250")
                        .card__content 
                            h2.product__price $19.99
                            p.product__description This is a dog.
                        .card__actions
                            buton.btn Add To Cart
        else
            h1 No products have been added.





